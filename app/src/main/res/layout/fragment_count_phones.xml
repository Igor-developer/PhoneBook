<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/default_margin"
    android:background="@color/primary_lilac_dark"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/default_border_thickness"
    tools:context=".CountPhonesFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/chosen_info_button"
        style="@style/info_button_style"
        android:text="@string/chosen" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/info_button"
        style="@style/info_button_style" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/last_phones_info_button"
        style="@style/info_button_style"
        android:text="@string/last_phones" />
</LinearLayout>