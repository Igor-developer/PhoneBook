<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchFormFragment">

    <!-- Форма ввода -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_lilac"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/form_label_style"
            android:text="@string/search_person" />

        <EditText
            android:id="@+id/name"
            style="@style/form_edittext_style"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />
    </LinearLayout>

    <!-- Форма уведомлений -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_lilac">

        <TextView
            android:id="@+id/notification"
            style="@style/notification_label_style" />
    </FrameLayout>

    <!-- Кнопка искать -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_lilac"
        android:gravity="center|top"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/search_button"
            style="@style/search_button_style"
            android:text="@string/search" />
    </LinearLayout>
</LinearLayout>